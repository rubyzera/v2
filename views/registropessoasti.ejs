<html lang="pt-BR">
<%- include("./partials/head.ejs") %>

<body>
  <%- include("./partials/nav.ejs") %>

  <div class="create-blog content">
    <form action="/pessoasti" method="POST">
      <label for="nome">Nome<br></label>
      <input type="text" id="nome" name="nome" required>
      <br>
      <label for="sexo">Sexo<br></label>
      <label>
        <input type="radio" name="sexo" value="Feminino" checked>Feminino
      </label>
      <label>
        <input type="radio" name="sexo" value="Masculino">Masculino
      </label>
      <label>
        <input type="radio" name="sexo" value="Outro">Outro
      </label>
      <input type="text" id="sexo">
      <br>
      <label for="datanasc">Data de nascimento<br></label>
      <input type="date" id="datanasc" name="datanasc" required>
      <br>
      <label for="email">E-mail<br></label>
      <input type="text" id="email" name="email" required>
      <br>
      <label for="telefone">Telefone:</label>
      <input type="text" id="telefone" name="telefone" required>
      <br>
      <label for="cidade">Cidade<br></label>
      <input type="text" id="cidade" name="cidade" required>
      <br>
      <label for="formacaoti">Sua formação é em TI?<br></label>
      <label>
        <input type="radio" name="formacaoti" value="Sim" checked>Sim
      </label>
      <label>
        <input type="radio" name="formacaoti" value="Não">Não
      </label>
      <br>
      <label for="formacaotrue">Se sim, qual formação em TI?<br></label>
      <input type="text" id="formacaotrue" name="formacaotrue">
      <br>
      <label for="formacaofalse">Se não, qual sua formação, e por que foi para TI?<br></label>
      <input type="text" id="formacaofalse" name="formacaofalse" required>
      <br>
      <label for="areaetempo">Que área em TI você trabalha? Há quanto tempo?<br></label>
      <input type="text" id="areaetempo" name="areaetempo" required>
      <br>
      <label for="resumotrabalho">Resuma seu trabalho e o que faz<br></label>
      <input type="text" id="resumotrabalho" name="resumotrabalho" required>
      <br>
      <button>Enviar</button>
    </form>
  </div>

  <%- include("./partials/footer.ejs") %>
</body>
</html>